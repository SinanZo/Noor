# Environment
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/noor-superapp
# Or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/noor-superapp

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Payment Gateways
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
HYPERPAY_API_KEY=your_hyperpay_api_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
ALADHAN_API_URL=https://api.aladhan.com/v1

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Frontend URL
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
